<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.concentrese.Configura"
    android:background="@drawable/fondo_ajustes"



    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center"
        >

        <Button
            android:id="@+id/intentos"
            style="@style/botonConfigura"
            android:background="@drawable/anima_bt_verde"
            android:text="Intentos"
            android:textSize="25dp"
            android:onClick="botones"

            />

        <Button
            android:id="@+id/tiempo"
            style="@style/botonConfigura"
            android:background="@drawable/anima_bt_rojo"
            android:textStyle="normal"
            android:text="Tiempo"
            android:onClick="botones"
            />

        <Button
            android:id="@+id/atras"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="150dp"
            android:onClick="botones"

            android:textColor="@android:color/white"
            android:background="@drawable/fondo_tranparente"

            android:text="inicio"
            />




    </LinearLayout>





</android.support.constraint.ConstraintLayout>
