<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondo_mensaje_dificultad"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="@color/cafeSuah"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="GAME OVER"
        android:textAlignment="center"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:background="@color/cafeOscuro"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="PUNTAJE"
        android:textAlignment="center"

        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/puntajePartida"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_ajustes"
        android:text="0"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/inicio"
        style="@style/botonesDificultad"
        android:layout_marginTop="63dp"


        android:text="inicio"
        android:onClick="botones"

        />

</LinearLayout>